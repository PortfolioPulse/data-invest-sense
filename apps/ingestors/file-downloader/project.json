{
  "name": "ingestors-file-downloader",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/ingestors/file-downloader/file_downloader",
  "targets": {
    "lock": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "apps/ingestors/file-downloader"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "outputPath": "apps/ingestors/file-downloader/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:flake8",
      "outputs": [
        "{workspaceRoot}/reports/apps/ingestors/file-downloader/pylint.txt"
      ],
      "options": {
        "outputFile": "reports/apps/ingestors/file-downloader/pylint.txt"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/apps/ingestors/file-downloader/unittests",
        "{workspaceRoot}/coverage/apps/ingestors/file-downloader"
      ],
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "apps/ingestors/file-downloader"
      }
    },
    "run": {
      "executor": "nx:run-commands",
      "dependsOn": ["image"],
      "options": {
        "command": "poetry run python file_downloader/main.py",
        "cwd": "apps/ingestors/file-downloader"
      }
    },
    "image": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "docker build -t fabiocaffarello/ingestors-file-downloader:latest --build-arg SERVICE_NAME=file-downloader --build-arg CONTEXT_ENV={args.contextEnv} --build-arg GATEWAY_ENVIRONMENT=true --build-arg RABBITMQ_GATEWAY_HOST=rabbitmq --build-arg RABBITMQ_PORT_6572_TCP=tcp://guest:guest@gateway_host:5672/ --build-arg LAKE_CONTROLLER_GATEWAY_HOST=lake-controller --build-arg LAKE_CONTROLLER_PORT_8000_TCP=tcp://gateway_host:8000 --build-arg MINIO_GATEWAY_HOST=minio --build-arg MINIO_PORT_9000_TCP=gateway_host:9000 --build-arg MINIO_ACCESS_KEY=new-minio-root-user --build-arg MINIO_SECRET_KEY=new-minio-root-password -f ./Dockerfile .",
        "cwd": "apps/ingestors/file-downloader"
      }
    },
    "run-temp": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry run python file_downloader/main.py",
        "cwd": "apps/ingestors/file-downloader"
      }
    },
    "minio-buckets": {
        "executor": "@data-invest-sense/repo-settings:minio-buckets",
        "cwd": "apps/ingestors/file-downloader"
    }
  },
  "tags": ["scope:lake-ingestors", "lang:python"]
}
